<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/details_Click"
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:elevation="10dp"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/all_Conatiner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toEndOf="@+id/img_con">

                <TextView
                    android:id="@+id/product_name_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_description_cart"
                    android:layout_marginTop="5dp"
                    android:text="Product Name"
                    android:textColor="#4E4E4E"
                    android:textSize="13dp" />


                <RelativeLayout
                    android:id="@+id/offer_Container"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:layout_marginTop="4dp"
                    android:layout_below="@+id/product_price_re">

                    <ImageView
                        android:id="@+id/offer_img"
                        android:layout_width="16.5dp"
                        android:layout_height="16.5dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/offercart" />

                    <TextView
                        android:id="@+id/product_offer_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/offer_img"
                        android:fontFamily="@font/quicksandsemibold"
                        android:textColor="#0F814D"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/off_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/product_offer_txt"
                        android:fontFamily="@font/quicksandsemibold"
                        android:text="% off"
                        android:textColor="#0F814D"
                        android:textSize="13dp" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/product_description_cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:maxLines="1"
                    android:text="Product Description"
                    android:textColor="@color/rama"
                    android:textSize="13dp" />

                <RelativeLayout
                    android:id="@+id/product_price_re"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_below="@id/product_name_cart">

                    <ImageView
                        android:id="@+id/ruppesicon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ruppee"
                        android:tint="@color/rama" />

                    <TextView
                        android:id="@+id/product_price_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/ruppesicon"
                        android:text="Product Price"
                        android:textStyle="bold"
                        android:textColor="@color/rama"
                        android:textSize="13dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_below="@+id/product_name_cart"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@id/product_price_re">

                    <TextView
                        android:id="@+id/qty_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="Qty"
                        android:textColor="#424242"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/dh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/qty_txt"
                        android:text="-"
                        android:textColor="#515151"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/total_Qty_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@id/dh"
                        android:textColor="@color/rama"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </RelativeLayout>




            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/img_con"
                android:layout_width="110dp"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/img_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true">

                    <RelativeLayout
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true">


                            <androidx.cardview.widget.CardView
                                android:id="@+id/i"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:backgroundTint="#F5F5F5"
                                app:cardCornerRadius="10dp">

                                <ImageView
                                    android:id="@+id/product_image_cart"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_launcher_foreground" />

                            </androidx.cardview.widget.CardView>
                        </RelativeLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/remove_form_cart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/img_icon"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/removefromcart" />
                </RelativeLayout>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/add_quantity"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:background="@drawable/ripaleffect"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="120dp">

                <ImageView
                    android:id="@+id/remove_img"
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/plus"
                    android:tint="@color/rama" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/remove_img"
                    android:fontFamily="@font/quicksandsemibold"
                    android:text="Add Quantity"
                    android:textColor="@color/rama"
                    android:textSize="12dp" />

            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/details_show_cart"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="end|center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_baseline_keyboard_arrow_right_24" />

        </RelativeLayout>





    </androidx.cardview.widget.CardView>


</RelativeLayout>