<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Activity.OfferActivity_Screen">

    <RelativeLayout
        android:id="@+id/offer_Action_conatiner"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/rama">

        <ImageView
            android:id="@+id/back_offer"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripaleffect"
            android:padding="3dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
            android:tint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/back_offer"
            android:fontFamily="@font/quicksandsemibold"
            android:text="All Offer For you"
            android:textColor="@color/white"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/offer_img"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            android:visibility="gone"
            android:src="@drawable/discount" />


    </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/all_offer_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@+id/offer_Action_conatiner"
        android:layout_marginBottom="65dp" />


    <LinearLayout
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="top"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"/>

</RelativeLayout>